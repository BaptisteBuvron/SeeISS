<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>SeeIss {{ info.city }}</title>
    <style>
        table{
            width: 100%;
        }

        th {
            text-align: left;
        }

        td {
            letter-spacing: 1px;
        }

        tbody td {
            text-align: left;
        }

        thead th:nth-child(1) {
            width: 4%;
        }

        thead th:nth-child(2) {
            width: 12%;
        }

        thead th:nth-child(3) {
            width: 12%;
        }

        thead th:nth-child(4) {
            width: 12%;
        }
        thead th:nth-child(5) {
            width: 12%;
        }
        thead th:nth-child(6) {
            width: 12%;
        }
        thead th:nth-child(7) {
            width: 12%;
        }


    </style>
</head>
<body>
<h2>{% trans %}passesText{% endtrans %} : </h2>
{% if info.lat and info.lon %}
    <p> Localisation : {{ info.city }}</p>
    <p>Lat : {{ info.lat }}</p>
    <p>Lon : {{ info.lon }}</p>
    <br>
{% endif %}
<section>
    {% for key, passe in passes %}
        <p>{{ key }}</p>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">{% trans %}start{% endtrans %}</th>
                <th scope="col">Az {% trans %}start{% endtrans %}</th>
                <th scope="col">Max</th>
                <th scope="col">Az Max</th>
                <th scope="col">{% trans %}end{% endtrans %}</th>
                <th scope="col">Az {% trans %}end{% endtrans %}</th>
                <th scope="col">{% trans %}duration{% endtrans %} (s)</th>
                <th scope="col">Magnitude</th>
            </tr>
            </thead>
            <tbody>
            {% for value in passe %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ value.dateStart }}</td>
                    <td>{{ value.azStart }} ({{ value.azStartDegres }}°)</td>
                    <td>{{ value.dateMax }}</td>
                    <td>{{ value.azMax }} ({{ value.azMaxDegres }}°)</td>
                    <td>{{ value.dateEnd }}</td>
                    <td>{{ value.azEnd }} ({{ value.azEndDegres }}°)</td>
                    <td>{{ value.duration }}</td>
                    <td>{{ value.mag }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endfor %}
</section>
<p>Generated by <strong>seeiss.com</strong></p>
<p>By Baptiste Buvron</p>


</body>
</html>